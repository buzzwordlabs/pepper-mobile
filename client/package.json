{
  "name": "pepper-mobile-client",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "android:release": "./apicheck.sh && yarn clean && yarn && npx jetify",
    "android:bugsnag:release": "ts-node deploy.ts android",
    "ios": "yarn ios:release && react-native run-ios --simulator='iPhone XÊ€'",
    "ios:release": "react-native bundle --entry-file index.ts --bundle-output ios/main.jsbundle --dev false --reset-cache --assets-dest=ios/",
    "ios:bugsnag:release": "ts-node deploy.ts ios",
    "android:git:tag": "grep \"versionName \" android/app/build.gradle | sed -n -e 's/^.*versionName //p' | jq  -r | { read label; git tag -fa $label -m v$label; } && git push --tags --force",
    "ios:git:tag": "git tag -fa $1 -m v$1 && git push --tags --force",
    "pod:install": "cd ios && pod install",
    "pod:update": "cd ios && pod update",
    "pod:refresh": "cd ios && rm -rf Pods && rm -f Podfile.lock && pod install",
    "postinstall": "patch-package",
    "refresh": "rm -rf node_modules && yarn && yarn pod:refresh && cd ..",
    "setup": "yarn && yarn pod:install",
    "start:w": "react-native start",
    "start:tsc:w": "run-p tsc:w start:w",
    "tsc:w": "tsc -w --skipLibCheck",
    "clean": "react-native clean-project && rm -rf android/app/build/",
    "codepush:android:prod": "ts-node deploy.ts cpandroid",
    "codepush:ios:prod": "ts-node deploy.ts cpios",
    "codepush:android:git:tag": "appcenter codepush deployment list -a callpepper/pepper-android --output json | jq -r '.[0] | .[1]' | sed -n -e 's/^.*Label: //p' | { read label; git tag -fa cp$label -m CodePush$label; } && git push --tags --force",
    "codepush:ios:git:tag": "appcenter codepush deployment list -a callpepper/pepper-ios --output json | jq -r '.[0] | .[1]' | sed -n -e 's/^.*Label: //p' | { read label; git tag -fa cp$label -m CodePush$label; } && git push --tags --force",
    "fastlane:ios:credentials:init": "fastlane match development appstore",
    "fastlane:android:prod": "fastlane android deploy"
  },
  "scriptsComments": {
    "Native Deploy on Android": "Make version changes in build.gradle, add changelog && yarn android:release && yarn fastlane:android:prod && yarn android:bugsnag:release && yarn android:git:tag",
    "Native Deploy on iOS": "Prod build && yarn ios:bugsnag:release BUILD_VERSION && yarn ios:git:tag APP_VERSION",
    "Codepush deploy on Android and iOS": "Just run codepush:android:prod or codepush:ios:prod, respectively",
    "fastlane:ios:credentials:init": "Initialize fastlane ios credentials. Only run once for new machines."
  },
  "dependencies": {
    "@react-native-community/async-storage": "^1.6.2",
